<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Required Features and Permissions -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WayMap">

        <!-- AdMob App ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <!-- Welcome Activity as the launcher -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- Home Activity -->
        <activity
            android:name=".homeActivity"
            android:exported="true">
            <!-- Optional: Intent filter for map handling -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="geo" />
            </intent-filter>
        </activity>

        <!-- Distance Activity -->
        <activity
            android:name=".DistanceActivity"
            android:exported="true" />

        <!-- More Activity -->
        <activity
            android:name=".moreActivity"
            android:exported="true" />

        <!-- Additional Activities -->
        <activity android:name=".profileActivity" android:exported="true" />
        <activity android:name=".ScenicstopsActivity" android:exported="true" />
        <activity android:name=".AnuradhapuraActivity" android:exported="true" />
        <activity android:name=".MirissaActivity" android:exported="true" />
        <activity android:name=".GalleportActivity" android:exported="true" />
        <activity android:name=".RuwanmeliseyaActivity" android:exported="true" />
        <activity android:name=".DambullaActivity" android:exported="true" />
        <activity android:name=".EllaActivity" android:exported="true" />
        <activity android:name=".sinharajaActivity" android:exported="true" />
        <activity android:name=".SripadasthanayaActivity" android:exported="true" />
        <activity android:name=".FuelManagementActivity" android:exported="true" />
        <activity android:name=".RouteplannerActivity" android:exported="true" />
        <activity android:name=".SignupActivity" android:exported="true" />
        <activity android:name=".LocaldishesActivity" android:exported="true" />
        <activity android:name=".MildActivity" android:exported="true" />


    </application>

</manifest>
