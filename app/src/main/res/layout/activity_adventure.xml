<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_34"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#001A44"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Phone Icon -->

            <!-- Phone Number -->

            <!-- WhatsApp Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Explore more. Worry less."
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WAYMAP "
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:fontFamily="sans-serif-medium" />

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:autoStart="true"
            android:flipInterval="2000"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="226dp"
                app:srcCompat="@drawable/ad1_1" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ad2" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                app:srcCompat="@drawable/ad3" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ad4" />

        </ViewFlipper>

        <!-- Section Title -->

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="ADVENTURE &amp; ACTIVITIES"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Adventure &amp; Activities"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@color/_00254d"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="16dp"/>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surrounded by the blue ocean, covered with jungle areas, beautiful lakes and hill country with the tea plantations in the centre, Sri Lanka, also known as The Pearl of the Indian Ocean, is full of surprises. From mountain trekking, hiking, and ziplining to diving, rafting, snorkelling, kayaking and surfing, the country offers a range of exciting activities to enjoy. Spending your holiday on this paradise island will never go to waste. We are sure that you will have an unforgettable vacation."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="#50FFFFFF"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Added Section: Things to do in Sri Lanka -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Things to do in Sri Lanka"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@color/_00254d"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sri Lanka, the paradise island in the Indian Ocean, welcomes all the nature lovers, adventure seekers, photographers, honeymooners, wellness enjoyers, exploring travellers and families to our beautiful land. It is a wonder filled with beautiful nature, beaches, animals, fruit, and flowers, rich in culture, history, and friendly people. You can enjoy the countryâ€™s beauty by visiting national parks, cultural heritage sites, lovely villages, misty mountains and beautiful beaches around the island."
            android:textSize="16sp"
            android:background="#50FFFFFF"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/indian_leopard"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/exploretext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/_00254d"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="16dp"/>

    </LinearLayout>

</ScrollView>
