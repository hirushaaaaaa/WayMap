<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">
    <!-- Header -->

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="405dp"
        android:layout_height="242dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="Fuel Station"
        android:scaleType="fitCenter"
        android:src="@drawable/sss"
        app:layout_constraintBottom_toTopOf="@+id/editDistance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,VisualLintBounds" />

    <EditText
        android:id="@+id/editFuelConsumption"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_cornertext"
        android:hint="Vehicle Fuel Consumption (L/100km)"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/calculateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFuelRate"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editDistance"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/rounded_cornertext"
        android:hint="@string/distance_km"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/editFuelRate"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/rounded_cornertext"
        android:hint="@string/fuel_rate_per_liter"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/editFuelConsumption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDistance"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/button_background"
        android:text="Calculate"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/resultText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFuelConsumption"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="84dp"
        android:paddingTop="16dp"
        android:text="@string/result_will_be_shown_here"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculateButton" />

    <Button
        android:id="@+id/backbuttonf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="289dp"
        android:layout_marginBottom="55dp"
        android:backgroundTint="@color/black"
        android:text="Back"
        android:textColor="@color/white"
        app:icon="@drawable/icons8_back_64"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083"
        tools:ignore="HardcodedText,VisualLintBounds,TouchTargetSizeCheck" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="6dp"
        android:text="Fuel Management"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76"
        tools:ignore="HardcodedText,TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>